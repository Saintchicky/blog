{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Bienvenue sur la page d'accueil</h1>
    <div class="row justify-content-center">
        {% for article in articles %}        
            <div class="card col-md-5 m-1">
                <p class="date">
                    {{ article.createdAt|date('d/m/Y') }} Ã  {{ article.createdAt|date('H:i') }}
                    par <span class="author">{{ article.author }}</span>
                </p>
                <img class="card-img-top" src="/assets/blog/images/{{ article.image }}" alt="{{ article.image }}">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <a href="{{ path('show', {'id': article.id }) }}" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
